  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "serve": "next start",
    "test": "yarn jest",
    "test:ci": "yarn jest --ci --coverage",
    "test:coverage": "yarn jest --coverage",
    "storybook": "start-storybook -s ./public -p 6006",
    "storybook:build": "build-storybook -s ./public  -c .storybook -o .out",
    "storybook:serve": "npx http-server .out",
    "codegen": "graphql-codegen --config codegen.yml --watch",
    "codegen:ci": "graphql-codegen --config codegen.yml",
    "codegen:update": "graphql-codegen --config codegen-update.js --watch",
    "lint": "eslint 'src/*/**/*.{js,jsx,ts,tsx}'",
    "lint:ci": "eslint 'src/*/**/*.{js,jsx,ts,tsx}' --quiet",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@apollo/react-ssr": "^3.1.5",
    "@apollo/react-testing": "^3.1.4",
